<form method="post" action="{{ path('chambre_delete', {'numero': chambre.numero}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chambre.numero) }}">
    <button class="btn">Delete</button>
</form>
